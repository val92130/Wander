@model Wander.Server.Models.UserAccount

@using (@Html.BeginForm("Login", "User", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Login)
        @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @required = true })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new {@class = "form-control", @required = true})
    </div>

    <button type="submit" class="btn btn-success">Login</button>

}


